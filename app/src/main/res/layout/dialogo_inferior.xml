<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/idRLBSheet"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/green_shade_2">
    
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/idTVBookName"
        android:layout_margin="4dp"
        android:padding="4dp"
        android:text="Nuevo libro"
        android:textColor="@color/white"
        android:textSize="15sp"
        android:textStyle="bold"/>

    <ImageView
        android:id="@+id/idImageBookName"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@+id/idTVBookName"
        android:layout_centerVertical="true"
        android:layout_marginStart="4dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="4dp"
        android:padding="4dp"
        android:src="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/idTVAutor"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/idTVBookName"
        android:layout_marginStart="4dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="4dp"
        android:layout_toRightOf="@+id/idImageBookName"
        android:padding="3dp"
        android:text="Autor"
        android:textColor="@color/white" />

    <TextView
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="Descripcion"
        android:id="@+id/idTVDescripcion"
        android:textColor="@color/white"
        android:layout_toRightOf="@+id/idImageBookName"
        android:layout_below="@+id/idTVAutor"
        android:padding="3dp"
        android:layout_margin="4dp" />

    <TextView
        android:id="@+id/idTVpaginas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/idTVBookName"
        android:layout_marginStart="4dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="4dp"
        android:textAlignment="textEnd"
        android:layout_toRightOf="@+id/idTVAutor"
        android:padding="3dp"
        android:text="100"
        android:textColor="@color/white" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2"
        android:layout_below="@id/idImageBookName">

        <Button
            android:id="@+id/EdtBookBtn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="4dp"
            android:text="Editar Libro"
            android:textAllCaps="false"
            android:textColor="@color/white" />
        <Button
            android:id="@+id/URLBookBtn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="4dp"
            android:text="Ver"
            android:textAllCaps="false"
            android:textColor="@color/white" />



    </LinearLayout>


</RelativeLayout>